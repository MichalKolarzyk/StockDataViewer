<UserControl x:Class="UserInterface.Views.CompanyListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserInterface.Views"
             mc:Ignorable="d" 
             Background="{StaticResource LightBackgroundBrush}"
             DataContext="{Binding Path=CompanyListViewModel, Source={StaticResource ServiceLocator}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <ListBox ItemsSource="{Binding Path=Companies}" 
                 SelectedItem="{Binding Path=SelectedCompany}">

            </ListBox>
        </StackPanel>
        <Button Content="Add" Command="{Binding Path=AddCommand}" Grid.Row="1"/>
        <Button Content="Remove" Command="{Binding Path=RemoveCommand}" Grid.Row="2"/>
    </Grid>

</UserControl>
